<div class="input-box">
<%= form_for @trip do |f| %>

  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-4">
    <%= f.label :video_link do %>
      影片連結
      <%= f.text_field :video_link, placeholder: 'youtube影片連結', tabindex: 1 %>
    <% end %>
  </div>

  <div class="col-4">
    <%= f.label :start_point do %>
      啟始點
      <%= f.text_field :start_point, placeholder: '影片中開始的地點' %>
    <% end %>
  </div>
  <div class="col-4">
    <%= f.label :end_point do %>
      結束點
      <%= f.text_field :end_point, placeholder: '影片中結束的地點' %>
    <% end %>
  </div>


<!--   <div class="col-2">
    <%= f.label :google_map_path_link do %>
      路線圖連結
      <%= f.text_field :google_map_path_link, placeholder: 'Google Map的路線圖' %>
    <% end %>
  </div> -->
  <div class="col-4">
    <%= f.label :road_type do %>
      道路類型
      <%= f.select :road_type, Trip.RoadTypes, :include_blank => true %>
    <% end %>
  </div>

  <div class="col-4">
    <%= f.label :distance do %>
      移動距離(KM)
      <%= f.text_field :distance, placeholder: '移動距離(KM)' %>
    <% end %>
  </div>

  <div class="col-4">
    <%= f.label :numbers_of_people do %>
      承載人數
      <%= f.number_field :numbers_of_people, placeholder: '乘客與駕駛', value: 1 %>
    <% end %>
  </div>

  <div class="col-4">
    <%= f.label :vehicle_name do %>
      車輛名稱
      <%= f.text_field :vehicle_name, placeholder: 'Dio 50' %>
    <% end %>
  </div>

  <div class="col-4 checkbox">
    <%= f.label :accident do %>
      有事故嗎
      <%= f.check_box :accident, :class => 'no-js-switch', tabindex: 9 %>
    <% end %>
  </div>

<!--   <div class="col-4 col-submit">
    <button type="submit">送出</button>
  </div> -->

  <!-- <div class="col-submit">
    <button type="submit">確定</button>
  </div> -->

  <div class="col-submit">
    <button id="action-button" type="submit">下一步</button>
  </div>
<% end %>
</div>